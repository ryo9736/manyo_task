<div class="container">
  <div class = "row">
    <div class="main col-md-12">
      <p><%= notice %></p>
      <h1>ユーザ一覧</h1>
    </div>
      <div class="main_right col-md-12">
        <table class="table table-condensed">
          <tr class = "info">
            <th>名前</th>
            <th>メールアドレス</th>
            <th>タスク数</th>
            <th>詳細</th>
            <th>編集</th>
            <th>削除</th>
          </tr>
          <% @users.each do |user| %>
            <tr class = "user_list" >
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.tasks.count %></td>
              <td><%= link_to '詳細',admin_user_path(user.id) %></td>
              <td><%= link_to '編集',edit_admin_user_path(user.id) %></td>
              <td><%= link_to '削除',admin_user_path(user.id), method: :delete %></td>
            </tr>
          <% end %>
         </table>
       </div>
  </div>
</div>


